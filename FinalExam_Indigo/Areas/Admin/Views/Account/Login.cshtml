@model LoginVM

        <div class="card-body">
            <h4 class="card-title">Login</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="UsernameOrEmail" for="exampleInputUsername1">UsernameOrEmail</label>
                    <input asp-for="UsernameOrEmail" type="text" class="form-control" id="exampleInputUsername1" placeholder="UsernameOrEmail">
                    <span asp-validation-for="UsernameOrEmail"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" for="exampleInputUsername1">Password</label>
                    <input asp-for="Password" type="password" class="form-control" id="exampleInputUsername1" placeholder="Password">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsRemembered" for="exampleInputUsername1">Remember me</label>
                    <input asp-for="IsRemembered" id="exampleInputUsername1" placeholder="IsRemembered">
                    <span asp-validation-for="IsRemembered"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button asp-action="index" asp-controller="home" class="btn btn-light">Cancel</button>
                <br /><br />
                <a asp-action="register" asp-controller="account">Don't you have an account? Register Now</a>
            </form>
        </div>
   