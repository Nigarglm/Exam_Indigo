@model RegisterVM


        <div class="card-body">
            <h4 class="card-title">Register</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Name" for="exampleInputUsername1">Name</label>
                    <input asp-for="Name" type="text" class="form-control" id="exampleInputUsername1" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname" for="exampleInputUsername1">Surname</label>
                    <input asp-for="Surname" type="text" class="form-control" id="exampleInputUsername1" placeholder="Surname">
                    <span asp-validation-for="Surname"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Username" for="exampleInputUsername1">Username</label>
                    <input asp-for="Username" type="text" class="form-control" id="exampleInputUsername1" placeholder="Username">
                    <span asp-validation-for="Username"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" for="exampleInputUsername1">Email</label>
                    <input asp-for="Email" type="email" class="form-control" id="exampleInputUsername1" placeholder="Email">
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" for="exampleInputUsername1">Password</label>
                    <input asp-for="Password" type="password" class="form-control" id="exampleInputUsername1" placeholder="Password">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" for="exampleInputUsername1">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="exampleInputUsername1" placeholder="ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button asp-action="index" asp-controller="home" class="btn btn-light">Cancel</button>
                <br /><br />
                <a asp-action="login" asp-controller="account">Already have an account? Login</a>
            </form>
        </div>
  